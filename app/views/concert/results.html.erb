<br>
<div class="col-sm-12">
<table class="table table-striped table-bordered">
<thead>
  <tr>
    <th>Show</th>
    <th>Date</th>
    <th>Venue</th>
  </tr>
</thead>
<tbody>

<% if @events.empty? %>

  <div class="alert alert-danger" role="alert"><strong>Oh no!</strong> No shows available on those dates :( </div>
  <% else %>

<% @events.each do |event| %>
  <tr>
    <td><%= event.show %><a href="/show_info"><button type="button" class="btn btn-info btn-sm">Show Info</button></a></td>
    <td><%= event.date.to_datetime.in_time_zone("Central Time (US & Canada)").strftime('%a, %d %b %Y')%></td>
    <td><%= event.name %></td>
  </tr>

</tbody>
<% end %>
<% end  %>
</table>
</div>
